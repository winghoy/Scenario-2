<HomeScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: 20
        spacing: 10
        Button:
            text: 'Enter Symptoms'
            size_hint: (None, None)
            size: (200, 100)
            pos_hint: {'center_x': 0.5, 'center_y': 0.9}
            on_press: 
                root.manager.transition = SlideTransition(direction='left')
                root.manager.current = 'enter_symptoms'
        Button:
            text: 'List of Symptoms'
            size_hint: (None, None)
            size: (500, 100)
        Button:
            text: 'Biometric Data'
            size_hint: (None, None)
            size: (200, 100)

<EnterSymptoms>:
    BoxLayout:
        Button:
            text: 'Back'
            size_hint: (None, None)
            size: (200, 100)
            on_press:
                root.manager.transition = SlideTransition(direction='left')
                root.manager.current = 'home'